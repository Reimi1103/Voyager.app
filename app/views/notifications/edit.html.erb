<% provide(:title, "お知らせの編集") %>
<h1>お知らせの編集画面</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@notice) do |f| %>


      <label for="title">タイトル</label>
      <%= f.text_field :title,class: "form-control" %>
      <label for="text">本文</label>
      <%= f.text_area :text,class: "form-control",rows: "8" %>
      <label for="category">カテゴリー</label>
      <%= f.select :category,["重要","お知らせ","アップデート"],class: "form-control" %>
      <label for="eyecatch">アイキャッチ</label>
      <%= f.file_field :eyecatch,class: "form-control" %>
      <%= f.submit "更新する",class: "btn btn-warning" %>

    <% end %>

  </div>
</div>
