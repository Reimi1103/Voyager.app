<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "本のタイトル" %>
    <%= form.text_field :title,class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label "プロローグ" %>
    <%= form.text_field :prologue,class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label "ブックカバー" %>
    <%= form.file_field :bookCover,class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label "スケジュール" %>
    <%= form.text_field :schedule,class: "form-control"  %>
  </div>

  <%= fields_for :bookHashTag do |b| %>
      <%= b.label :hashtag %>
      <%= b.text_area :tag,class: "form-control" %>
 <% end %>

  <div class="actions">
    <%= form.submit "ブックを作成する",class: "btn btn-success" %>
  </div>
<% end %>
