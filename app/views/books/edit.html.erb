<h1>BOOKの編集</h1>

<%= form_with(model: @book, local: true) do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this @book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :progress %>
    進行中：<%= form.radio_button :progress, :false,{checked: true} %>
    旅の終わり：<%= form.radio_button :progress, :true,{} %>
  </div>

  <div class="field">
    <%= form.label "本のタイトル" %>
    <%= form.text_field :title,class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label "プロローグ" %>
    <%= form.text_field :prologue,class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label "ブックカバー" %>
    <%= form.file_field :bookCover,class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label "スケジュール" %>
    <%= form.text_field :schedule,class: "form-control"  %>
  </div>

  <div class="actions">
    <%= form.submit "旅を終わる",class: "btn btn-success" %>
  </div>
<% end %>


<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>
