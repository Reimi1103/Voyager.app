<% provide(:title, @post.user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @post.user %>
        <%= @post.user.name %>
        	
      </h1>
    </section>
  </aside>
  <div class="col-md-8">


    <label for="">テキスト</label>
    <p><%= @post.text %></p>


    <div id="map"></div>
      <style type="text/css">
        #map {
          height:400px;
        }
      </style>
        <script type="text/javascript">
          var latitude = <%= @post.latitude %>;
          var longitude = <%= @post.longitude %>;


          $('#map_latitude').val(latitude);
          $('#map_longitude').val(longitude);
              L.Icon.Default.imagePath = "/assets";
                var map = L.map('map').setView([latitude, longitude],17);
                var osmUrl = "http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png";
                var osmAttrib = "Map data OpenstreetMap contributors";
                L.tileLayer(osmUrl,{
                  attribution: osmAttrib,
                  maxZoom: 20,
                }).addTo(map);

                var marker = L.marker([latitude, longitude]).addTo(map);

                map.on("click",function(e){
                  marker.setLatLng(e.latlng);
                  $('#map_latitude').val(e.latlng.lat);
                  $('#map_longitude').val(e.latlng.lng);
                });

          </script>
    <label for="">画像</label>
    <p><%= image_tag @post.image1.url ,style:"width:300px;" unless @post.image1.blank?%></p>
    <p><%= image_tag @post.image2.url ,style:"width:300px;" unless @post.image2.blank?%></p>
    <p><%= image_tag @post.image3.url ,style:"width:300px;" unless @post.image3.blank? %></p>


    <!-- コメント機能 -->
      <% if logged_in? %>
        <%= form_for @comment, url: posts_comments_path  do |f| %>
          <%= f.text_field :body %>
          <%= f.hidden_field :post_id, :value => @post.id %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
          <%= f.submit "コメント", class: "btn btn-primary" %>
        <% end %>
      <% end %>

      <% @comments.each do |comment| %>
      <div class="panel">
        <%= comment.user.name  %>
        <%= comment.updated_at  %>
        <%= comment.body  %>
        </div>
      <% end %>


      <!-- いいね機能 -->
      <% if current_user.nices.find_by(post_id: @post.id) %>
        <%= link_to nice_path(post_id: @post.id), method: :delete, remote: true do %>
            <div class = "iine__button">❤️<%= @post.nices.count %></div>
        <% end %>
      <% else %>
        <%= link_to nices_path(post_id: @post.id), method: :post, remote: true do %>
            <div class = "iine__button">♡️<%= @post.nices.count %></div>
        <% end %>
      <% end %>

  </div>
</div>
